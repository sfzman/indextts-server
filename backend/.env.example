# IndexTTS Server Environment Configuration

# Server settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Model settings
MODEL_DIR=/app/checkpoints
DEFAULT_REFERENCE=examples/voice.wav

# Storage settings
OUTPUT_DIR=/app/outputs
REFERENCE_DIR=/app/references

# Task queue settings
MAX_QUEUE_SIZE=100
TASK_TIMEOUT=300

# Cleanup settings (in seconds)
CLEANUP_INTERVAL=3600
RESULT_RETENTION=86400

# Set to true to auto-download model on container start
DOWNLOAD_MODEL=false
